<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen del Pedido"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>

    <ImageView
        android:id="@+id/imgBocadillo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Imagen del bocadillo"/>

    <TextView
        android:id="@+id/txtNombreBocadillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/txtDescripcionBocadillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/txtCosteBocadillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingTop="4dp"/>

    <Button
        android:id="@+id/btnCancelarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar Pedido"
        android:backgroundTint="@color/main"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"/>
</LinearLayout>
